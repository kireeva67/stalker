generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  telegram_id  Int @unique
  username String
  is_bot Boolean
  last_name String?
  first_name String?
  links Links[]
  polls Polls[]
}

model Links {
  id Int @id @default(autoincrement())
  url String
  available_params Json
  selected_params Json?
  is_active Boolean @default(false)
  user_id Int
  user User @relation(fields: [user_id], references: [id])
}

model Polls {
  id Int @id @default(autoincrement())
  poll_id String                 
  chat_id Int
  user_id Int
  options Json
  url String
  user User @relation(fields: [user_id], references: [id])
}